<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kuaidai.administrator.kuaishoudai">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/register" />
        <activity
            android:name=".activity.ForgetActivity"
            android:label="@string/forget" />

        <activity
            android:name=".activity.CameraActivity"
            android:label="@string/camera" />

        <activity
            android:name=".activity.CustomerActivity"
            android:label="@string/customer" />

        <activity
            android:name=".activity.GalleryActivity"
            android:label="@string/gallery" />

        <activity
            android:name=".activity.MyWebViewActivity"
            />
    </application>

</manifest>